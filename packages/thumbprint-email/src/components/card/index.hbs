<callout {{#if type}} class="{{type}}" {{/if}}>
    <img src="{{iconUrl}}" width="40" height="40" style="max-width: 40px;" />
    <spacer size="16" />
    <h2>{{title}}</h2>
    <div>{{text}}</div>
    {{#if linkHref}}
    <spacer size="16" />
    <a href="{{linkHref}}"><b>{{linkText}} ></b></a>
    {{/if}}
</callout>