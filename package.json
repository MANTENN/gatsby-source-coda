{
    "private": true,
    "scripts": {
        "start": "echo \"\nüëã New to Thumbprint? Take a look at our 'CONTRIBUTING.md' for tips!\n\" && yarn run bootstrap && cd www && echo \"\n‚ÑπÔ∏è  Need a hand? Reach out on #design-systems for help.\n\" && yarn start",
        "updated": "lerna updated",
        "bootstrap": "lerna run prepublishOnly",
        "publish": "git checkout master && git pull && yarn && yarn test && yarn build:dist && lerna publish",
        "build:docs": "yarn run bootstrap && cd www && yarn build",
        "build:dist": "lerna exec -- rm -rf dist .cache && yarn run bootstrap",
        "format": "prettier \"**/*.{ts,tsx,js,jsx,css,scss,json,md,mdx,html}\" --write",
        "test": "yarn bootstrap && yarn test:lint && yarn test:jest && yarn test:prettier && yarn test:typecheck",
        "test:jest": "TZ=America/Los_Angeles jest",
        "test:jest:watch": "yarn bootstrap && yarn test:jest --watch",
        "test:typecheck": "tsc --project tsconfig.json",
        "test:prettier": "./scripts/test-prettier.sh",
        "test:lint": "yarn test:lint:md && yarn test:lint:css && yarn test:lint:js",
        "test:lint:md": "remark \"packages/*/CHANGELOG.md\" --frail --quiet",
        "test:lint:css": "stylelint --ignore-pattern **/*.module.scss **/*.scss",
        "test:lint:js": "eslint . --ignore-path .gitignore --ext .jsx,.js,.tsx,.ts"
    },
